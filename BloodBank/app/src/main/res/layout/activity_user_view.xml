<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp"
    android:layout_margin="6dp"
    android:layout_gravity="center"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/logged_in_donar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/logged_in_donar_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/logged_in_donar_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BloodGroup"
            android:gravity="center"
            />
        <Button
            android:id="@+id/logged_in_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="View All Donars"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/center_code_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="enter the center code to register"
                />

            <Button
                android:id="@+id/center_code_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="register"
                />
        </LinearLayout>

    </LinearLayout>







</androidx.cardview.widget.CardView>

